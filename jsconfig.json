{
    "compilerOptions": {
        "target": "es2017",
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./",
        "paths": {
            "@root/*": [
                "./*"
            ],
            "@controllers/*": [
                "./app/controllers/*"
            ],
            "@models/*": [
                "./app/models/*"
            ],
            "@services/*": [
                "./app/services/*"
            ],
            "@middleware/*": [
                "./app/middleware/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}